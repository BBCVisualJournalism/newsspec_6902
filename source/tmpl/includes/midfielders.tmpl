        <div class="position midfielder">
        	<div class="heading">
        		<h2><%= position_3 %></h2>
			</div>
			<div class="group">
				<%

					for (var i=1;i<41; i++) {
						player(i);
					}

					function player(number) {
						var isDecimal = ((number - 1) % 10 == 0)? ' decimal' : '';
						var isMobileBreak = ((number - 1) % 5 == 0)? ' mobile-break' : '';
					%>

				        <span class="grow player<%= isDecimal %><%= isMobileBreak %>" data-status="empty" data-pid="m<%= number %>" data-position="midfielder"><%= number %></span>

				<% }; %>
			</div>
        </div>